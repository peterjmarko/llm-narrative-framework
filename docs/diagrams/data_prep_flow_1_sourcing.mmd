    classDef scriptStyle fill:#fff2cc,stroke:#d6b656,stroke-width:2px
    classDef artifactFileStyle fill:#f5f5f5,stroke:#666,stroke-width:1px
    classDef artifactDBStyle fill:#f5f5f5,stroke:#666,stroke-width:1px
